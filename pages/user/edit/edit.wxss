/* pages/user/edit/edit.wxss */
page{
  width:100%;
  height:100%;
}
.wrap{
  position:relative;
  padding:10rpx 1rpx;
  margin:40rpx 10rpx 0;
  background-color:#0CF;
}
.wrap-bg{
  background-color:#FFF;
  padding: 0 0 10rpx;
}
form{}

.text-info{
  position:absolute;
  top:80rpx;
  left:30%;
  width:32%;
  text-align: center;
  height:50rpx;
  z-index:999;
}
.text-msg{
  font-size: 30rpx;
  background:  #0CF;
  color:#fff;
  height:50rpx;
  margin-right: 20rpx;
}
.text-rz{
  font-size: 26rpx;
  display: inline;
}
.li-photo-box{
  height:180rpx;
  line-height:180rpx;
  padding-left:50rpx;
  border-bottom:1rpx solid #0CF;
}
.li-photo-box .head-photo{
  float:right;
  width:136rpx;
  height:136rpx;
  margin:22rpx 20rpx 0 0;
}

.li-item{
  height:100rpx;
  padding-left:50rpx;
  line-height:100rpx;
}
.li-background{
  height:220rpx;
  line-height:220rpx;
}
.li-background-hover{
  background-color:#333;
  color:#FFF;
  opacity:0.1;
}
.edit-text{
  float:right;
  width:64%;
  height:80rpx;
  padding:0 0 0 10rpx;
  margin:10rpx 10rpx 0 0;
  line-height:80rpx;
  border:1rpx solid #0CF;
}
text.edit-text{
  border:none;
}

.form-btn{
  width:50%;
  margin:10rpx auto 0;
  background-color:#0CF;
  color:#FFF;
}
.info {
  text-align: center;
  height:50rpx;
  font-size:28rpx;
  margin: 10rpx auto 0;
}