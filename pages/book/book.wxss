/* pages/book/book.wxss */

.tab{
  height:100rpx;
  border-bottom:1rpx solid #F1F1F1;
}
.tab-list{
  float:left;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
}
.tab-list:first-child{
  border-right:1rpx solid #F1F1F1;
}
.tab-list-cur{
  border-bottom:2rpx solid #0CF;
}

.content{
  margin-top:20rpx;
}
.tab-content{
  display:none;
  width:100%;
  margin-bottom: 120rpx;
  overflow:hidden;
}
.tab-content-cur{
  display:block;
}

/*已物品*/
.say-li{
  position:relative;
  width:90%;
  margin:10rpx auto 0;
  background-color:#FFF;
  box-sizing:border-box;
  overflow:hidden;
  border-bottom:2rpx solid #F1F1F1;
}
.li-l{
  float:left;
  width:16%;
  height:100%;
  padding:10rpx 0 20rpx;
}
.pubuser{
  position:relative;
  width:100%;
  height:0;
  padding-bottom:100%;
  border-radius:50%;
  overflow:hidden;
}
.pubuser image{
  position:absolute;
  width:100%;
  height:100%;
}
.say-cont{
  float:left;
  width:82%;
  height:100%;
  padding:10rpx 0 20rpx;
  margin-left:2%;
}
.say-cont .pubusername{
  font-size:32rpx;
  color:rgb(26, 92, 114);
}
.say-cont .pubdec{
  min-height:60rpx;
  line-height:60rpx;
  font-size:34rpx;
  word-break:break-all;
}
.say-cont .pubtime{
  height:40rpx;
  line-height:40rpx;
  font-size:26rpx;
}
.delete{
  position:absolute;
  top:10rpx;
  right:40rpx;
  font-size:28rpx;
  color:red;
}
.skr{
  position:absolute;
  bottom:26rpx;
  right:130rpx;
  font-size:26rpx;
}
.complain{
  position:absolute;
  bottom:26rpx;
  right:20rpx;
  font-size:26rpx;
}
.cart-null{
  text-align: center;
  margin-top: 30%;
  font-size: 40rpx;
  color:#D7D7D7
}

/*底部*/
.bottom{
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:116rpx;
  border-top:1rpx solid #F2F2F2;
  background-color:#FFF;
}
.bottom input{
  float:left;
  width:74%;
  height:80rpx;
  line-height:80rpx;
  margin:18rpx 0 0 4%;
  border-bottom:1rpx solid #F2F2F2;
  font-size:26rpx;
}
.bottom  button{
  width:16%;
  height:80rpx;
  margin:18rpx 0 0 2%;
  padding:0;
  line-height:80rpx;
  background-color:#0CF;
  color:#FFF;
}
